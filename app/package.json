{
  "name": "blitzjs-web3-foundry",
  "version": "1.0.0",
  "scripts": {
    "dev": "npm run prebuild && blitz dev",
    "prebuild": "make -C .. contracts && typechain --target ethers-v5 --out-dir contracts ../out/**/*.json",
    "build": "blitz build",
    "start": "blitz start",
    "lint": "eslint --ignore-path .gitignore --ext .js,.ts,.tsx .",
    "test": "jest",
    "test:watch": "jest --watch",
    "clean": "rm -rf .next .blitz.config.compiled.js"
  },
  "prettier": {
    "semi": false,
    "printWidth": 100
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "eslint --fix"
    ]
  },
  "dependencies": {
    "blitz": "0.45.3",
    "ethers": "5.6.2",
    "react": "18.0.0",
    "react-dom": "18.0.0",
    "wagmi": "0.2.24"
  },
  "devDependencies": {
    "@typechain/ethers-v5": "10.0.0",
    "@types/react": "17.0.40",
    "eslint": "7.32.0",
    "lint-staged": "11.3.0-beta.2",
    "prettier": "2.6.0",
    "pretty-quick": "3.1.3",
    "typechain": "8.0.0",
    "typescript": "~4.5"
  },
  "private": true
}
